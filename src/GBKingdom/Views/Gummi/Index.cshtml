@{
}
@model IEnumerable<GBKingdom.Models.Gummi>

@{ 
    ViewData["Title"] = "Gummi Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h2>Current Gummmies</h2>
    <h4>@Html.DisplayNameFor(model => model.name)</h4>
    <ul>
        @foreach (var listGummi in Model)
        {
            <li>
                @Html.DisplayFor(modelGummi => listGummi.name) | @Html.ActionLink("Edit this bear", "Edit", new { id = listGummi.id }) | @Html.ActionLink("Details of this bear", "Details", new { id = listGummi.id }) | @Html.ActionLink("Delete this bear", "Delete", new { id = listGummi.id })
            </li>

        }
    </ul>
    <p>@Html.ActionLink("Add new Bear", "Create")</p>
</body>